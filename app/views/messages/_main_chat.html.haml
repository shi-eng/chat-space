.chat-main
  .group-info
    .group-info__name
      = @group.name
      %ul.group-info__name__members
        Member:
        - @group.users.each do |user|
          %li.group-info__name__members__member
            = user.name
    %p.group-info__edit
      = link_to edit_group_path(@group) , class: "edit" do
        Edit


  .message-list
    = render @messages


  .message-form
    %form.new_message
      .input-box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          .input-box__image
            = f.label :image, class: 'input-box__image' do
              = icon('fas', 'image', class: 'input-box__image__icon')
              = f.file_field :image, class: 'input-box__image__hidden'
          = f.submit 'Send', class: 'submit__btn'