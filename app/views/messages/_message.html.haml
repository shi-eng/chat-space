.message-list__box
      .message-list__box__top
        %p.message-list__box__top__name
          = message.user.name
        %p.message-list__box__top__date
          = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
      .message-list__box__bottom
        - if message.content.present?
          %p.message-list__box__bottom
            = message.content
        = image_tag message.image.url, class: 'message-list__box__bottom' if message.image.present?